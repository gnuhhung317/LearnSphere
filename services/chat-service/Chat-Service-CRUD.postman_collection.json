					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const response = pm.response.json();",
									"    if (response.data && response.data.id) {",
									"        pm.environment.set('roomId', response.data.id);",
									"        pm.environment.set('roomName', response.data.name);",
									"        console.log('Room created with ID:', response.data.id);",
									"    }",
									"}",
									"",
									"pm.test('Status is 201 Created', function() {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"pm.test('Response has room data', function() {",
									"    const response = pm.response.json();",
									"    pm.expect(response.data).to.have.property('id');",
									"    pm.expect(response.data).to.have.property('name');",
